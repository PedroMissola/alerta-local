{
  "expo": {
    "name": "Alerta Local",
    "slug": "alerta-local",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pedromissola.alertalocal",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "O Alerta Local precisa acessar sua localização em segundo plano para avisar quando você se aproximar do seu destino, mesmo com o app fechado ou a tela bloqueada.",
        "NSLocationWhenInUseUsageDescription": "O Alerta Local precisa acessar sua localização para monitorar sua proximidade ao destino.",
        "UIBackgroundModes": [
          "location",
          "audio"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.pedromissola.alertalocal",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "POST_NOTIFICATIONS",
        "WAKE_LOCK",
        "VIBRATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "O Alerta Local precisa acessar sua localização em segundo plano para avisar quando você se aproximar do seu destino, mesmo com o app fechado ou a tela bloqueada.",
          "locationWhenInUsePermission": "O Alerta Local precisa acessar sua localização para monitorar sua proximidade ao destino.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#2196F3",
          "sounds": [
            "./assets/sounds/chime.mp3"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}